{
  "name": "devsecops-demo-app",
  "version": "1.0.0",
  "description": "Demo application for DevSecOps automated security testing pipeline",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "jest",
    "security:dependency-check": "dependency-check --project devsecops-demo --scan . --format ALL",
    "security:trivy": "trivy fs --severity HIGH,CRITICAL .",
    "security:all": "npm run security:dependency-check && npm run security:trivy"
  },
  "keywords": [
    "devsecops",
    "security",
    "automation",
    "shift-left"
  ],
  "author": "DevSecOps Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.3",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^6.7.0",
    "joi": "^17.9.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.0",
    "lodash": "^4.17.19"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "jest": "^29.5.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
